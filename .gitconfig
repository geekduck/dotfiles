[user]
	name = geekduck
	email = duck1218+github@gmail.com
[color]
	# colorの設定(以下のコマンドは自動で色つける)
	ui = auto
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[core]
	quotepath = false
	excludesfile = ~/.gitignore_global
	editor = emacsclient -t
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.5.5/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[include]
	path = ~/.gitconfig.local
[alias]
	co = checkout
	s = status --short --branch
	st = status
	stt = status -s -b
	cm = commit -a
	b = branch -a -v
	br = browse-remote
	d = diff
	dc = diff --cached
	dw = diff --word-diff
	f = fetch --prune
	fs = !git fetch --prune && git submodule update
	lg = log
	graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
[browse-remote "github.com"]
	top = https://{host}/{path}
	ref = https://{host}/{path}/tree/{short_ref}
	rev = https://{host}/{path}/commit/{commit}
	file = "https://{host}/{path}/blob/{short_rev}/{file}{line && \"#L%d\" % line}"
[init]
	templatedir = ~/.git_templates
[push]
	default = simple
[ghq]
	root = ~/workspace
